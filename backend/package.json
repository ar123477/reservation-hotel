{
  "name": "togohotel-backend",
  "version": "1.0.0",
  "description": "API backend pour TogoHotel Manager - Système de gestion hôtelière complet pour les hôtels du Togo",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "seed": "node seeds/seed.js",
    "seed:dev": "NODE_ENV=development node seeds/seed.js",
    "seed:prod": "NODE_ENV=production node seeds/seed.js",
    "test": "jest --verbose --coverage",
    "test:watch": "jest --watch",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "docker:build": "docker build -t togohotel-backend .",
    "docker:run": "docker run -p 3000:3000 togohotel-backend",
    "docs": "apidoc -i routes/ -o docs/",
    "migrate": "node scripts/migrate.js",
    "health": "node scripts/health-check.js"
  },
  "keywords": [
    "hotel",
    "management",
    "booking",
    "reservation",
    "togo",
    "lome",
    "kara",
    "api",
    "rest",
    "mysql",
    "express"
  ],
  "author": {
    "name": "TogoHotel Team",
    "email": "contact@togohotel.tg",
    "url": "https://togohotel.tg"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/togohotel/backend.git"
  },
  "bugs": {
    "url": "https://github.com/togohotel/backend/issues"
  },
  "homepage": "https://togohotel.tg",
  "engines": {
    "node": ">=14.0.0",
    "npm": ">=6.0.0"
  },
  "dependencies": {
    "express": "^4.18.2",
    "mysql2": "^3.6.0",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "nodemailer": "^6.9.4",
    "helmet": "^7.0.0",
    "express-rate-limit": "^6.8.1",
    "compression": "^1.7.4",
    "morgan": "^1.10.0",
    "validator": "^13.9.0",
    "moment": "^2.29.4",
    "winston": "^3.10.0"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "jest": "^29.6.1",
    "supertest": "^6.3.1",
    "eslint": "^8.45.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-prettier": "^4.2.1",
    "prettier": "^2.8.8",
    "apidoc": "^1.2.0"
  },
  "jest": {
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "controllers/**/*.js",
      "models/**/*.js",
      "middleware/**/*.js",
      "!**/node_modules/**",
      "!**/coverage/**"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 70,
        "functions": 70,
        "lines": 70,
        "statements": 70
      }
    }
  },
  "prettier": {
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5",
    "printWidth": 80,
    "tabWidth": 2
  },
  "nodemonConfig": {
    "watch": [
      "server.js",
      "config/",
      "controllers/",
      "models/",
      "middleware/",
      "routes/"
    ],
    "ext": "js,json",
    "ignore": [
      "node_modules/",
      "logs/",
      "uploads/",
      "coverage/",
      "docs/"
    ],
    "exec": "node server.js",
    "env": {
      "NODE_ENV": "development"
    }
  }
}